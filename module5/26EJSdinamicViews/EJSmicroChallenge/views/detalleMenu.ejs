<!DOCTYPE html>
<html>
  <%- include ('./partials/head.ejs', {title: 'menuDetail' + plate.id }) %>
  <body>
    
    <%- include ('./partials/header.ejs') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plate.type %></h1>
          <br />
          <h4><%= plate.description %></h4>
          <p class="ps-text-grey">
            <%= plate.price %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= plate %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>
      <%- include ('./partials/footer.ejs') %>
    </div>
  </body>
</html>
